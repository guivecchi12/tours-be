{
  "ts-node": { "compilerOptions": { "module": "commonjs" } },
  "compilerOptions": {
    "target": "esnext",
    "lib": ["es6"],
    "module": "commonjs",
    "rootDir": "",
    "resolveJsonModule": true,
    // "allowJs": true,
    "outDir": "build",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "typeRoots": ["node_modules/@types"]
  }
}
